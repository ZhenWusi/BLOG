<!-- 页脚区域 -->
<footer class="site-footer">
  <div class="footer-inner">
    <!-- 页脚信息 -->
    <div class="footer-info">
      <p>
        &copy; <%= theme.footer.since %> - <%= new Date().getFullYear() %>
        <a href="<%- url_for('/') %>"><%= config.author %></a>
      </p>
      <p class="footer-powered">
        <% if (theme.footer.powered) { %>
          由 <a href="https://hexo.io/" target="_blank" rel="noopener">Hexo</a> 驱动 |
          主题 <a href="<%- url_for('/') %>">Flavor</a>
        <% } %>
      </p>
      <% if (theme.footer.icp) { %>
        <p class="footer-icp"><a href="https://beian.miit.gov.cn/" target="_blank"><%= theme.footer.icp %></a></p>
      <% } %>
    </div>

    <!-- 页脚社交链接 -->
    <div class="footer-social">
      <% if (theme.author.social.github) { %>
        <a href="<%= theme.author.social.github %>" target="_blank" rel="noopener" title="GitHub">
          <i class="fab fa-github"></i>
        </a>
      <% } %>
      <% if (theme.author.social.email) { %>
        <a href="<%= theme.author.social.email %>" title="邮箱">
          <i class="fas fa-envelope"></i>
        </a>
      <% } %>
      <a href="<%- url_for('/atom.xml') %>" target="_blank" title="RSS 订阅">
        <i class="fas fa-rss"></i>
      </a>
    </div>
  </div>
</footer>
