<!-- 分页组件 -->
<% if (page.total > 1) { %>
  <nav class="pagination">
    <!-- 上一页 -->
    <% if (page.prev) { %>
      <a href="<%- url_for(page.prev_link) %>" class="page-btn prev">
        <i class="fas fa-chevron-left"></i> 上一页
      </a>
    <% } else { %>
      <span class="page-btn prev disabled"><i class="fas fa-chevron-left"></i> 上一页</span>
    <% } %>

    <!-- 页码 -->
    <span class="page-number">
      第 <%= page.current %> / <%= page.total %> 页
    </span>

    <!-- 下一页 -->
    <% if (page.next) { %>
      <a href="<%- url_for(page.next_link) %>" class="page-btn next">
        下一页 <i class="fas fa-chevron-right"></i>
      </a>
    <% } else { %>
      <span class="page-btn next disabled">下一页 <i class="fas fa-chevron-right"></i></span>
    <% } %>
  </nav>
<% } %>
